[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	autoSetupRemote = true

[commit]
	gpgsign = true

[core]
	editor = hx
	pager = delta
	excludesFile = ~/.gitignore_global
	autocrlf = input

[sequence]
	editor = hx

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	dark = true
	syntax-theme = gruvbox-dark
	side-by-side = true
	line-numbers = true

[diff]
	algorithm = histogram

[log]
	date = iso

[merge]
	conflictStyle = zdiff3

[branch]
	sort = -committerdate

[fetch]
	prune = true

[rerere]
	enabled = true

[alias]
	st = status
	co = checkout
	br = branch
	lg = log --graph --oneline --decorate
	cm = commit -m
	amend = commit --amend --no-edit
	uncommit = reset --soft HEAD~1
	unstage = reset HEAD --
	last = log -1 HEAD
	branches = branch -a
	remotes = remote -v
	contributors = shortlog -sn
[rebase]
	autosquash = true
	updateRefs = true
